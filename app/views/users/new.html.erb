<h1>Sign Up</h1>
<%= form_for @user do |f| %>
	<% if @user.errors.any? %>
		<div class="alert alert-danger">
			<% @user.errors.full_messages.each do |mess| %>
				--<%= mess %>
			<% end %>
		</div>
	<% end %>
	<table>
		<tr>
			<td>Email: </td>
			<td><%= f.text_field :email %></td>
		</tr>
		<tr>
			<td>Username: </td>
			<td><%= f.text_field :username %></td>
		</tr>
		<tr>
			<td>Password: </td>
			<td><%= f.password_field :password %></td>
		</tr>
		<tr>
			<td>Role: </td>
			<td><%= f.select :role, [['admin', 'admin'], ['editor', 'editor'], ['user', 'user']], class: "btn dropdown-toggle" %></td>
		</tr>
		<tr>
			<td></td>
			<td><%= f.submit "Sign up", class: "btn btn-success" %></td>
		</tr>
	</table>
<% end %>
